<section id="rsvp">
<div class="container-fluid">
    <div class="row">
      <div class="col-xs-12" style="padding:0px;margin:0px;">
      <%=link_to root_path do%><span class="ubuntu">FOOTY THURSDAY</span><%end%>
      </div>
      
      <h1 style="color:#ffffff;display:inline-block;">New Game</h1>
<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :location,:style=>"color:#ffffff;",:class=>"opensans" %><br>
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :event_date,:style=>"color:#ffffff;",:class=>"opensans" %><br>
    <%= f.date_select :event_date %>
  </div>
  <div class="field">
    <%= f.label :start_time,:style=>"color:#ffffff;",:class=>"opensans" %><br>
    <%= f.time_select :start_time %>
  </div>
  <div class="field">
    <%= f.label :end_time,:style=>"color:#ffffff;",:class=>"opensans" %><br>
    <%= f.time_select :end_time %>
  </div>
  <div class="actions">
    <%= f.submit "Create Game", :class=>"creategamesub" %>
  </div>
<% end %>
<%= link_to 'Back to admin dashboard', events_path,:class=>"opensans",:style=>"color:#ffffff; text-decoration:underline;" %>
</div>
</div>
</section>